  gem 'watchr'
  gem 'spork'
  gem 'factory_girl_rails'
  gem "database_cleaner"
  gem 'shoulda-matchers'
  gem 'awesome_print'
  gem 'devise'
  gem 'devise-encryptable'
  gem 'acts_as_fu'
  gem 'cucumber-rails'
end

