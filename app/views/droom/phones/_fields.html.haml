- fields ||= nil
- fields_counter ||= nil
- phone ||= fields || @phone
- user = @user || current_user

= fields_for :user do |uf|
  = uf.fields_for :phones, phone, :child_index => fields_counter || 'field_counter' do |f|

    %fieldset.repeating
      .controls
        = link_to t(:remove), '#', :class => "remove", :data => {:action => "remove", :removed => "fieldset"}
        - if phone.persisted?
          = f.hidden_field :_destroy, :class => 'destroy'

      %p.twocol.reversed
        %span.col>
          = f.text_field :phone, :placeholder => t("placeholders.phone.phone"), required: true
        %span.col.last>
          = f.select :address_type_id, Droom::AddressType.for_selection

