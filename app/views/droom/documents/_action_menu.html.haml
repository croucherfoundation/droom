- if can? :edit, document
  .menu{:data =>{:for => "document_#{document.id}"}}
    %ul.actions
      %li
        = link_to t(:edit_document), droom.edit_folder_document_url(document.folder, document), :class => 'edit', :data => {:action => "popup", :replaced => "#document_#{document.id}"}
      %li
        = link_to t(:delete_document), droom.folder_document_url(document.folder, document), :method => 'delete', :class => 'delete', :data => {:action => "remove", :removed => "#document_#{document.id}", :affected => ".minimonth", :confirm => t(:confirm_delete_document, :name => document.name)}
