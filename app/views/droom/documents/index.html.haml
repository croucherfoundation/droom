- @seen_events = {}

#documents
  - if @my_documents.any?
    %section.personal
      %p.twister
        = link_to t(:your_personal_documents), '#'
      .twisted
        = render :partial => 'document', :collection => @my_documents
  
#marginalia
  
  %form#search{:action => search_documents_url}
    = text_field_tag :q, params[:q], :placeholder => t(:search)
    = submit_tag "go"

  %section.results
    = render :partial => "search_results"
