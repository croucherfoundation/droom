- omit_body ||= false
- body_limit ||= 300
- omit_caption ||= false
- caption_limit ||= 100

- if notice.body? || notice.note?
  - body = clean_html(notice.body || "")
  - short_body = truncate strip_tags(body), length: body_limit, :separator => " "
  - caption = clean_html(notice.note || "")

  - short_caption = truncate strip_tags(caption), length: caption_limit, :separator => " "
  - truncated = body != short_body || caption != short_caption

  .notice_body
    %div{class: truncated ? "compact" : ""}
      - unless omit_body
        = short_body

      - if !omit_caption && short_caption.present?
        %figcaption
          = short_caption

      - if truncated
        %a.reveal
          =t (:notice_expand)

    - if truncated
      .expanded
        - unless omit_body
          = sanitize(body)
        - if !omit_caption && caption.present?
          %figcaption
            = sanitize(caption)
        %a.reveal
          =t (:notice_contract)

  .footnote
    %p
      - if notice.created_by
        = t :posted_by
        = notice.created_by.informal_name
      - else
        = t :posted
      = time_ago_in_words notice.created_at
      = t :ago
