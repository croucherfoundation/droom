#scraps.paginated{:data => {:refreshing => true, :url => scraps_path(:format => :js)}}
  - if @scraps.any?
    = render :partial => "thumb", :collection => @scraps
    .pagination.sliding
      = paginate @scraps

    .preload
      = render :partial => "preload", :collection => @scraps
      
  - else
    = t :no_stream
  