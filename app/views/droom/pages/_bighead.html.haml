- bighead ||= nil
- page ||= bighead || @page

- if page.illustrated?
  - image_url = page.main_image.url(:hero)
  #page_masthead
    .bg{style: "background-image: url('#{image_url}')"}
    .darken
    .fg
      #title
        %h1.title
          = sanitize(page.title)
        - if @page.subtitle
          %p.subtitle
            = sanitize(@page.subtitle)
- else
  #page_title
    %h1.title
      = page.title
