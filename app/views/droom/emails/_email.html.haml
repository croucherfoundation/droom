- cssclass = "email "
- cssclass << email.address_type.slug if email.address_type

%li{class: cssclass}
  - if email.address_type
    %svg.icon.small{title: email.address_type.name}
      %use{"xlink:href" => "#address_type_#{email.address_type.slug}_symbol"}
  - else
    %svg.icon.small
      %use{"xlink:href" => "#email_symbol"}
  %span.contact
    = mail_to email.email, truncate(email.email, length: 56)
  