- group ||= @group
- users = @users || group.users.page(1).per(20)

%div.group{:id => "group_#{group.id}", :data => {:refreshing => true, :url => group_path(group, :format => :js)} }
  %h2
    = group.name
    = action_menulink(group)
  = action_menu(group)

  .scroller
    = render partial: "droom/groups/users", locals: {group: group, users: users}
