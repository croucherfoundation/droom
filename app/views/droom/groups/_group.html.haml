- group ||= @group

%div{:id => "group_#{group.id}", :data => {:action => "collapser", :refreshable => true, :url => group_path(group, :format => :js)} }
  %h2
    = group.name
    = action_menulink(group)
  = action_menu(group)

  %ul.people
    = render :partial => "droom/people/person", :collection => group.people, :locals => {:group => group}
