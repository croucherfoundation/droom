- pending ||= nil
- organisation ||= pending || @organisation
-# - byebug

.organisation.holder{:id => "organisation_#{organisation.id}", :data => {:refreshing => true, :url => droom.organisation_path(organisation, view: "pending")} }
  - if admin?
    = render partial: "droom/organisations/show/status", locals: {organisation: organisation}

  %h2.name<
    = link_to organisation.name, organisation.url, :class => "name"
    - if organisation.organisation_type
      %span.addendum
        = organisation.organisation_type.name
    - if organisation.chinese_name?
      %span.chinese_name
        = organisation.chinese_name
  
  %span
    .mon
      = organisation.created_at.strftime('%b %d %Y')
  - if organisation.tags.any?
    %ul.tags
      - organisation.tags.each do |tag|
        %li.tag
          %svg.prefix
            %use{"xlink:href" => "#tag_symbol"}
          %span.label
            = tag.name

  - if organisation.users.any?
    %ul.people
      = render partial: "droom/users/show/listed_minimal", collection: organisation.users.in_name_order

  - if organisation.url
    %span.description
      = organisation.url

  - if organisation.phone
    %span.description
      = organisation.phone

  - if organisation.email_domain
    %span.description
      = organisation.email_domain

  - if organisation.address
    %span.description
      = organisation.address

  - if organisation.description?
    %p.description
      = shorten organisation.description
