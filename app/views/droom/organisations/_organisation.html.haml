- organisation ||= @organisation
- open ||= organisation == @organisation

.organisation.holder{:id => "organisation_#{organisation.id}", :class => open ? "name open" : "name", :data => {:action => "collapser", :refreshable => true, :url => droom.organisation_path(organisation, :format => :js)} }
  .heading
    %h2.name<
      = link_to organisation.name, organisation_url(organisation), :class => "name"
      - if admin?
        %span.admin<
          = link_to t(:edit_organisation), droom.edit_organisation_url(organisation), :class => 'edit minimal', :remote => true, :data => {:action => "popup", :type => "html", :replaced => "#organisation_#{organisation.id}"}
          = link_to t(:remove), droom.organisation_url(organisation), :method => 'delete', :class => 'delete minimal', :remote => 'true', :data => {:confirm => t(:confirm_delete_organisation, :name => organisation.name)}

  %p.preview
    = shorten(organisation.description, :length => 64)

  .detail
    = organisation.description.html_safe
    - if organisation.url?
      %p.note
        = link_to organisation.url_without_protocol, organisation.url_with_protocol, :class => "external"
    

    - if organisation.people.any?
      %ul.people
        = render :partial => "droom/people/person", :collection => organisation.people.order("name ASC")