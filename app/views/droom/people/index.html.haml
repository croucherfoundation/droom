#people
  %table
    %tbody
      - @people.each do |p|
        %tr.person
          %td.name
            %h3
              = p.name
          %td.email
            %p
              = link_to p.email, "mailto:#{p.email}"
          %td.phone
            %p
              = p.phone || "no phone"


