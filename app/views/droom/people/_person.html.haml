- person ||= @person
%tr.person.holder{:id => "person_#{person.id}"}
  %td.icon
    %span.placeholder
    
  %th.name
    = person.title
    = person.name
      
  %td.email
    %p
      = mail_to person.email
  %td.phone
    - if person.phone
      %p
        = person.phone
    - else
      %p.unavailable
        no phone
  / %td.address
  /   - if person.address?
  /     %p
  /       = person.address
  /   - else
  /     %p.unavailable
  /       no address
  %td.buttons
    %a{:href => person_url(person, :format => :vcf), :class => 'vcard'}
    - if admin?
      = link_to t(:edit_person), edit_person_url(person), :class => 'admin edit minimal', :remote => true, :data => {:action => "overlay_form", :type => "html"}
