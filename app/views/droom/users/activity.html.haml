#edit_user
  .header{data: {draggable: ".popup", remembered: "user"}}
    = link_to "X", '#', :class => "closer", :data => {:action => "close"}
    %h2.titlebar
      - if @user == current_user
        = t :activity_of_your
      - else
        = t :activity_of, name: @user.name

  .user
    = render 'droom/users/show/activity'