- user ||= @user
- screened_years = user.screened_years

- interviewed_years = user.interviewed_years

- applied_years = user.applied_years

- received_awards_years = user.received_awards

- grants_years = user.received_grants


#edit_user
  .header
    = link_to "X", '#', :class => "closer", :data => {:action => "close"}
    %h2.titlebar
      - if @user == current_user
        = t :activity_of_your
      - else
        = t :activity_of, name: @user.name

  .user
    %div
      = label_tag 'Applications: '
      = render 'droom/users/show/activity_link', data: applied_years

    %div
      = label_tag 'Awards: '
      = render 'droom/users/show/activity_link', data: received_awards_years

    %div
      = label_tag 'Grants: '
      = render 'droom/users/show/activity_link', data: grants_years

    %div
      = label_tag 'Screener: '
      = render 'droom/users/show/activity_link', data: screened_years

    %div
      = label_tag 'Interviewer: '
      = render 'droom/users/show/activity_link', data: interviewed_years
