- user ||= @user
#note
  = render 'droom/shared/popup_header', title: t(:contacts_for, name: user.name)

  = form_for user, :html => {class: 'poppedup'}, data: {remote: true, type: :html} do |f|
    = hidden_field_tag :view, @view

    #edit_contacts
      = render "droom/users/edit/emails", f: f, user: user
      = render "droom/users/edit/phones", f: f, user: user
      = render "droom/users/edit/addresses", f: f, user: user

    = render partial: 'droom/users/edit/buttons', locals: {f: f}