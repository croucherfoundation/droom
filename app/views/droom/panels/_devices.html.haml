#devices.panel
  %h4
    = t :mobile_devices
  %p
    = t :device_instructions
  %ul
    - if current_user
      %li
        = link_to t(:subscribe_to_calendar), droom.feed_events_url(:auth_token => current_user.authentication_token, :protocol => "webcals", :format => :ics)
    %li
      = link_to t(:download_contacts), droom.users_url(:format => :vcf)
    %li
      = link_to t(:follow_stream), droom.feed_scraps_url(:format => :rss, :auth_token => current_user.authentication_token)
    %li
      = link_to t(:setup_dropbox), '#'
  %p.note
    These links are all personal to you and include an automatic login. Keep them secret.
